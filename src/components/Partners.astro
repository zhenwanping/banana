---
import { Image } from 'astro:assets';
import logo1 from '../assets/logos/1.png';
import logo2 from '../assets/logos/2.png';
import logo3 from '../assets/logos/3.png';
import logo4 from '../assets/logos/4.png';
import logo5 from '../assets/logos/5.png';

const partners = [
  { name: "Fradel & Sons", logo: logo1 },
  { name: "Wildwood Conservation", logo: logo2 },
  { name: "Borcelle", logo: logo3 },
  { name: "Maria Donna", logo: logo4 },
  { name: "Ignite Bright", logo: logo5 },
  { name: "Ignite Bright", logo: logo5 },
  { name: "Borcelle", logo: logo3 },
  { name: "Maria Donna", logo: logo4 },
  { name: "Wildwood Conservation", logo: logo2 },
  { name: "Fradel & Sons", logo: logo1 },
  // Add more partners here
];
---

<section class="bg-white py-20">
  <div class="container mx-auto px-4">
    <h2 class="text-3xl font-serif font-bold text-center mb-12">30万合作商家</h2>
    <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-5 gap-8">
      {partners.map((partner) => (
        <div class="flex items-center justify-center">
          <Image 
            src={partner.logo} 
            alt="partner.name" 
            class="rounded-lg"
            width={128}
            height={128}
          />
        </div>
      ))}
    </div>
  </div>
</section>
